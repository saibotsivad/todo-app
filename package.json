{
  "name": "todo-app",
  "version": "0.0.0",
  "engines": {
    "node": "14.15.4"
  },
  "type": "module",
  "scripts": {
    "setup": "rimraf deploy/public && npm-run-all --parallel symlink:* && npm-run-all --parallel glob:*",
    "symlink:client": "rimraf client/node_modules && mkdirp client/node_modules && cd client/node_modules && symlink ../component/ component && symlink ../lib/ lib  && symlink ../api/ api",
    "symlink:dev": "symlink public server/public",
    "symlink:server": "rimraf server/node_modules && mkdirp server/node_modules && cd server/node_modules && symlink ../security security && symlink ../service service && symlink ../lib lib",
    "glob:client": "glob-module-file --cwd='./client' --pattern='route/**/*.route.js' --format=es --exportWithPath --pathPrefix='./' --outputPath=client/globbed-routes.js",
    "glob:server": "glob-module-file --cwd='./server' --pattern='route/**/*.route.js' --format=es --exportWithPath --importStar --pathPrefix='./' --outputPath=server/globbed-routes.js",
    "generate-openapi": "ncp node_modules/swagger-ui-dist public/docs && node generate-openapi.js",
    "prebuild": "npm run setup && cd deploy && npm ci && cd ..",
    "build": "rollup -c",
    "postbuild": "node generate-openapi.js && ncp public deploy/public",
    "predeploy": "npm run build",
    "deploy": "cd deploy && serverless deploy --stage=$STAGE",
    "dev": "npm run setup && npm-run-all --parallel watch:js watch:glob-client watch:glob-server",
    "start": "node server/local-development.js",
    "watch:js": "rollup -c -w",
    "watch:glob-client": "watch 'npm run glob:client' client/route",
    "watch:glob-server": "watch 'npm run glob:server && node generate-openapi.js' server/route"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "@rollup/plugin-run": "^2.0.2",
    "compression": "^1.7.4",
    "glob-module-file": "^3.0.2",
    "got": "^11.8.1",
    "mkdirp": "^1.0.4",
    "ncp": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "polka": "^0.5.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.3.4",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "serverless": "^2.22.0",
    "serverless-http": "^2.7.0",
    "sign-aws-requests": "^1.0.1",
    "sirv": "^1.0.11",
    "sirv-cli": "^1.0.11",
    "source-map-support": "^0.5.19",
    "svelte": "^3.0.0",
    "swagger-ui-dist": "^3.42.0",
    "symlink-cli": "^1.0.0",
    "watch": "^1.0.2"
  },
  "dependencies": {
    "abstract-state-router": "^6.1.0",
    "svelte-state-renderer": "^3.0.1"
  }
}
