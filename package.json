{
  "name": "todo-app",
  "version": "0.0.0",
  "scripts": {
    "setup": "npm run symlink && npm-run-all --parallel glob:*",
    "glob:client": "glob-module-file --cwd='./client' --pattern='route/**/*.route.js' --format=es --exportWithPath --pathPrefix='./' --outputPath=client/globbed-routes.js",
    "glob:server": "glob-module-file --cwd='./server' --pattern='route/**/*.route.js' --format=es --exportWithPath --importStar --pathPrefix='./' --outputPath=server/globbed-routes.js",
    "prebuild": "npm run setup",
    "build": "rollup -c",
    "predeploy": "npm run build",
    "deploy": "cd deploy && serverless deploy --stage=dev",
    "dev": "npm run setup && npm-run-all --parallel watch:js watch:glob-client watch:glob-server",
    "OLD_start": "sirv public --dev --port 3000",
    "start": "node -r esm server/local-development.js",
    "watch:js": "rollup -c -w",
    "watch:glob-client": "watch 'npm run glob:client' client/route",
    "watch:glob-server": "watch 'npm run glob:server' server/route",
    "symlink": "rimraf client/node_modules && mkdirp client/node_modules && cd client/node_modules && symlink ../component/ component && symlink ../lib/ lib  && symlink ../api/ api && cd ../.. && symlink public server/public"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "compression": "^1.7.4",
    "esm": "^3.2.25",
    "glob-module-file": "^3.0.2",
    "mkdirp": "^1.0.4",
    "npm-run-all": "^4.1.5",
    "polka": "^0.5.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.3.4",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "serverless": "^2.22.0",
    "sirv": "^1.0.11",
    "sirv-cli": "^1.0.11",
    "svelte": "^3.0.0",
    "symlink-cli": "^1.0.0",
    "watch": "^1.0.2"
  },
  "dependencies": {
    "abstract-state-router": "^6.1.0",
    "svelte-state-renderer": "^3.0.1"
  }
}
